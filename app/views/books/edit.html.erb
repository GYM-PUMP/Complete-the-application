<h1>Editing Book</h1>
<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<%= form_for(@book) do |f| %>
	<br>
<h4>Title</h4>
<%= f.text_field :title %>
<br>
<br>
<h4>Body</h4>
<%= f.text_area :body %>
<br>
<br>
<%= f.submit'Update Book' %>
<br>
<%= link_to "Show", book_path %> |
<%= link_to "Back", books_path %>

<% end %>
